extends ../layout

block content
    .container
        .row.justify-content-center
            .col-lg-8
                #profileWrapper
                    form(onsubmit="return false")
                        input(type="text" style="display: none")
                        input(type="password" style="display: none")
                        .form-group.row
                            .col-sm-8.offset-sm-4
                                h3 #{i18n('profile_title')}
                        .form-group.messages.center
                        .form-group.row
                            label.col-sm-4.col-form-label.text-sm-right(for="inputEmail") #{i18n('profile_email_label')}
                            .col-sm-8
                                input#inputEmail.form-control(type="email" name="email" value=user.email readonly)
                        .form-group.row
                            label.col-sm-4.col-form-label.text-sm-right(for="inputName") #{i18n('profile_name_label')}
                            .col-sm-8
                                input#inputName.form-control(type="text" name="name" value=(user.displayName || '') validate)
                                .invalid-feedback
                        .form-group.row
                            label.col-sm-4.col-form-label.text-sm-right(for="inputCurPassword") #{i18n('profile_cur_password_label')}
                            .col-sm-8
                                input#inputCurPassword.form-control(type="password" name="cur_password" validate aria-describedby="helpCurPassword")
                                small#helpCurPassword.form-text.text-muted #{i18n('profile_cur_password_help')}
                                .invalid-feedback
                        .form-group.row
                            label.col-sm-4.col-form-label.text-sm-right(for="inputNewPassword1") #{i18n('profile_new_password1_label')}
                            .col-sm-8
                                input#inputNewPassword1.form-control(type="password" name="new_password1" validate aria-describedby="helpNewPassword1")
                                small#helpNewPassword1.form-text.text-muted #{i18n('profile_new_password1_help')}
                                .invalid-feedback
                        .form-group.row
                            label.col-sm-4.col-form-label.text-sm-right(for="inputNewPassword2") #{i18n('profile_new_password2_label')}
                            .col-sm-8
                                input#inputNewPassword2.form-control(type="password" name="new_password2")
                                .invalid-feedback
                        .form-group.row
                            .col-sm-8.offset-sm-4
                                button.btn.btn-primary(type="submit") #{i18n('profile_submit_button')}
