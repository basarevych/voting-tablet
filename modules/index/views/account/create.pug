extends ../layout

block content
    .container
        .row.justify-content-center
            .col-lg-8
                #signUpWrapper
                    form(onsubmit="return false")
                        input(type="text" style="display: none")
                        input(type="password" style="display: none")
                        .form-group.row
                            .col-sm-8.offset-sm-4
                                h3 #{i18n('sign_up_title')}
                        .form-group.messages.center
                        .form-group.row
                            label.col-sm-4.col-form-label.text-sm-right(for="inputEmail") #{i18n('sign_up_email_label')}
                                span.control-required #{i18n('form_control_required')}
                            .col-sm-8
                                input#inputEmail.form-control(type="email" name="email" validate)
                                .invalid-feedback
                        .form-group.row
                            label.col-sm-4.col-form-label.text-sm-right(for="inputName") #{i18n('sign_up_name_label')}
                            .col-sm-8
                                input#inputName.form-control(type="text" name="name" validate)
                                .invalid-feedback
                        .form-group.row
                            label.col-sm-4.col-form-label.text-sm-right(for="inputPassword1") #{i18n('sign_up_password1_label')}
                                span.control-required #{i18n('form_control_required')}
                            .col-sm-8
                                input#inputPassword1.form-control(type="password" name="password1" validate)
                                .invalid-feedback
                        .form-group.row
                            label.col-sm-4.col-form-label.text-sm-right(for="inputPassword2") #{i18n('sign_up_password2_label')}
                                span.control-required #{i18n('form_control_required')}
                            .col-sm-8
                                input#inputPassword2.form-control(type="password" name="password2")
                                .invalid-feedback
                        .form-group.row
                            .col-sm-8.offset-sm-4
                                button.btn.btn-primary(type="submit") #{i18n('sign_up_submit_button')}
